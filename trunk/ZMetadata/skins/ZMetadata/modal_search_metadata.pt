        showsTime      :    false,            
        button         :    "btnToDate",   
        singleClick    :    true,           
        step           :    1               
    });
	
	populateCombobox("cbxSpatialType", spatialOperations);
    populateCombobox("cbxRegion", provinceList);	
	disableDateRange()
    </script>    

